<div class="bg-container">
<div class="form-container">
<div class="profile-container">

<h2>Signup</h2>


<form action="/auth/signup" method="POST" id="form-container" enctype="multipart/form-data">

<div class="input">
  <label for="username">Username</label>
  <input id="username" type="text" name="username" placeholder="Coffee Lover">
</div>
<br>

<div class="input">
  <label for="password">Password</label>
  <input id="password" type="password" name="password" placeholder="Your password">
</div>
<br>
  {{#if message }}
    <div class="alert alert-danger">{{ message }}</div>
  {{/if}}

<div class="input">
  <label for="email">Email</label>
  <input id="email" type="text" name="email" placeholder="Ineed@Coffee.com">
</div>
<br>

<div class="input">
    <input type="file" name="photo" id="photo_upload" class="inputfile">
  <label class="profile-btns p-2 btn mb-4" for="photo_upload">Upload a picture</label>
</div>
<br>

<div class="btn-div">
  <button class="profile-btns btn">Create account</button>
</div>

  <div class="account-message">
    <p>Do you already have an account?</p>
    <a href="/auth/login">Login</a>
  </div>
</form>
</div>
</div>
</div>